<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Products">
    <select id="findAll" resultType="product">
        select * from productsTable
    </select>
    <select id="findById" parameterType="Integer" resultType="contentBlocks">
        select * from contentBlocks where productId = #{id} ORDER by blockOrder ASC
    </select>
    <select id="findDetail" resultType="product">
        select * from productsTable where productId = #{id}
    </select>
</mapper>